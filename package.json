{
  "name": "cortex-tms",
  "version": "3.1.0",
  "description": "AI-powered project scaffolding CLI for documentation, task management, and workflow automation. Optimized for Claude Code, GitHub Copilot, and LLM-assisted development.",
  "type": "module",
  "bin": {
    "cortex-tms": "./bin/cortex-tms.js",
    "cortex": "./bin/cortex.js"
  },
  "files": [
    "bin/",
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm run cli:build",
    "prepublishOnly": "pnpm run build",
    "cli:dev": "tsx src/cli.ts",
    "cli:build": "tsc -p tsconfig.cli.json",
    "cli:test": "node bin/cortex-tms.js --help",
    "docs:sync": "node scripts/sync-project.js",
    "docs:check": "node scripts/sync-project.js --check",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry-run": "node scripts/release.js --dry-run",
    "release:hotfix": "node scripts/release-hotfix.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "audit": "pnpm audit --prod",
    "audit:fix": "pnpm audit --fix",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky",
    "website:dev": "pnpm --filter @cortex-tms/website dev",
    "website:build": "pnpm --filter @cortex-tms/website build",
    "website:preview": "pnpm --filter @cortex-tms/website preview"
  },
  "keywords": [
    "documentation",
    "boilerplate",
    "ai",
    "ai-assistant",
    "llm",
    "claude",
    "copilot",
    "cli",
    "generator",
    "scaffolding",
    "project-structure",
    "task-management",
    "workflow",
    "typescript",
    "starter-kit"
  ],
  "author": {
    "name": "Cortex TMS Contributors",
    "email": "maintainers@cortex-tms.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cortex-tms/cortex-tms.git"
  },
  "bugs": {
    "url": "https://github.com/cortex-tms/cortex-tms/issues"
  },
  "homepage": "https://cortex-tms.org/",
  "dependencies": {
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "inquirer": "^13.2.2",
    "minimatch": "^10.1.1",
    "ora": "^8.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.30",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
