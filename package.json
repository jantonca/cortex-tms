{
  "name": "cortex-tms",
  "version": "2.1.0",
  "description": "The Universal AI-Optimized Project Boilerplate - CLI tool for bootstrapping TMS-structured projects",
  "type": "module",
  "bin": {
    "cortex-tms": "./bin/cortex-tms.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "cli:dev": "tsx src/cli.ts",
    "cli:build": "tsc -p tsconfig.cli.json",
    "cli:test": "node bin/cortex-tms.js --help",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "documentation",
    "boilerplate",
    "ai",
    "copilot",
    "claude",
    "tms",
    "cli",
    "generator",
    "template"
  ],
  "author": "Cortex TMS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cortex-tms.git"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "inquirer": "^10.2.2",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}
