---
/**
 * PillarsSection Component
 *
 * Displays three pillars (Cost, Quality, Sustainability) with viz-bar visualizations
 * Adapted from branding/designs/library liquid glass design
 */
import { TrendingUp, Shield, Leaf, Target } from '@lucide/astro';
import '../styles/glass-library.css';
import '../styles/pillars-section.css';
---

<div class="pillars-grid">
    <!-- Pillar 1: Cost Efficiency -->
    <div class="pillar-card" data-pillar="cost">
      <div class="pillar-icon">
        <TrendingUp size={24} />
      </div>
      <h3>Cost Efficiency</h3>
      <p class="pillar-description">
        Reduce AI API costs by up to 10x through intelligent context tiering.
      </p>

      <div class="pillar-viz">
        <div class="viz-bar">
          <div class="viz-bar-fill" style="width: 100%; background: rgba(255, 100, 100, 0.3)"></div>
          <div class="viz-label">Before: $0.19</div>
        </div>
        <div class="viz-bar">
          <div class="viz-bar-fill" style="width: 10%; background: rgba(32, 178, 170, 0.5)"></div>
          <div class="viz-label">After: $0.01</div>
        </div>
      </div>
      <p class="pillar-impact">
        <Target size={16} /> Impact: 10x cost reduction
      </p>
    </div>

    <!-- Pillar 2: Quality -->
    <div class="pillar-card" data-pillar="quality">
      <div class="pillar-icon">
        <Shield size={24} />
      </div>
      <h3>Quality</h3>
      <p class="pillar-description">
        80% fewer pattern violations with Guardian semantic validation.
      </p>

      <div class="pillar-viz">
        <div class="viz-bar">
          <div class="viz-bar-fill" style="width: 100%; background: rgba(255, 100, 100, 0.3)"></div>
          <div class="viz-label">Before: 40% violations</div>
        </div>
        <div class="viz-bar">
          <div class="viz-bar-fill" style="width: 20%; background: rgba(32, 178, 170, 0.5)"></div>
          <div class="viz-label">After: 8% violations</div>
        </div>
      </div>
      <p class="pillar-impact">
        <Target size={16} /> Impact: Zero false negatives
      </p>
    </div>

    <!-- Pillar 3: Sustainability -->
    <div class="pillar-card" data-pillar="sustainability">
      <div class="pillar-icon">
        <Leaf size={24} />
      </div>
      <h3>Sustainability</h3>
      <p class="pillar-description">
        94.5% lower compute requirements through intelligent context management.
      </p>

      <div class="pillar-viz">
        <div class="viz-bar">
          <div class="viz-bar-fill" style="width: 100%; background: rgba(255, 100, 100, 0.3)"></div>
          <div class="viz-label">Before: 100% compute</div>
        </div>
        <div class="viz-bar">
          <div class="viz-bar-fill" style="width: 5.5%; background: rgba(32, 178, 170, 0.5)"></div>
          <div class="viz-label">After: 5.5% compute</div>
        </div>
      </div>
      <p class="pillar-impact">
        <Target size={16} /> Impact: Greener development
      </p>
    </div>
  </div>
