---
/**
 * Figure Component for Blog Posts
 * Beautiful image component with caption support
 */
interface Props {
  src: string
  alt: string
  caption?: string
}

const { src, alt, caption } = Astro.props
---

<figure class="blog-figure">
  <img src={src} alt={alt} />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .blog-figure {
    margin: 3.5rem 0;
    text-align: center;
  }

  .blog-figure img {
    width: 100%;
    border-radius: 24px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    display: block;
    margin: 0 auto;
  }

  .blog-figure figcaption {
    margin-top: 1rem;
    font-style: italic;
    color: var(--sl-color-gray-3);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  /* Light mode adjustments */
  :root[data-theme='light'] .blog-figure img {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
  }
</style>
